{
    "meta": {
        "key": "slot",
        "name": "Slot",
        "description": "Main Slot package with the application core and built-in functionality. This package always has the same version as the application itself.",
        "version": "0.0.1",
        "copyright": "Copyright (c) Vasily Voronkov"
    },
    "settings": [
        { "file": "settings.json" }
    ],
    "keymaps": [
        {
            "key": "default",
            "name": "Default keymap",
            "file": "keymap.json"
        }
    ],
    "commands": [
        { "file": "commands.json" }
    ],
    "themes": [
        {
            "key": "light",
            "name": "Default Light",
            "file": "themes/light.json"
        },
        {
            "key": "dark",
            "name": "Default Dark",
            "file": "themes/dark.json"
        }
    ],
    "modes": [
        {
            "key": "text",
            "grammar": "text",
            "name": "Plain Text",
            "kind": "default",
            "extensions": [ "txt" ]
        },
        {
            "key": "csharp",
            "grammar": "csharp",
            "name": "C#",
            "extensions": [ "cs" ]
        },
        {
            "key": "javascript",
            "grammar": "javascript",
            "name": "JavaScript",
            "extensions": [ "js", "jsx" ]
        },
        {
            "key": "html",
            "grammar": "html",
            "name": "HTML",
            "extensions": [ "htm", "html" ]
        },
        {
            "key": "xml",
            "grammar": "xml",
            "name": "XML",
            "extensions": [ "xml", "xsd", "xsl", "xslt", "config", "manifest" ]
        },
        {
            "key": "json",
            "grammar": "json",
            "name": "JSON",
            "extensions": [ "json" ]
        },
        {
            "key": "css",
            "grammar": "css",
            "name": "CSS",
            "extensions": [ "css" ]
        }
    ],
    "grammars": [
        {
            "key": "text",
            "file": "grammars/default.json"
        },
        {
            "key": "csharp",
            "file": "grammars/csharp.json"
        },
        {
            "key": "css",
            "file": "grammars/css.json"
        },
        {
            "key": "html",
            "file": "grammars/html.json"
        },
        {
            "key": "xml",
            "file": "grammars/xml.json"
        },
        {
            "key": "json",
            "file": "grammars/json.json"
        },
        {
            "key": "javascript",
            "file": "grammars/javascript.json"
        }
    ]
}
